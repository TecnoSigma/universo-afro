<br><br>
<div class="container-fluid">
  <%= render '/partials/messages' %>
  <div class="row">
    <div class="col-sm-4 offset-sm-4 col-md-4 offset-md-4 col-lg-4 offset-lg-4">
      <div class="card">
        <h5 class="card-header">
          <%= t('.title') %>
        </h5>
        <div class="card-body">
          <p class="card-text">
            <%= form_with scope: 'user', url: '/send_password_notification' do |form| %>
              <div class="mb-3">
                <label class="form-label"><%= t('.choose_profile') %></label>
                <%= form.select 'profile',
                                options_for_select(Profile.list),
                                {},
                                class: 'form-select',
                                required: true %>
              </div>
              <div class="mb-3">
                <label class="form-label"><%= t('.registered_email') %></label>
                <%= form.text_field 'email', class: 'form-control', required: true %>
              </div>
              <%= form.submit t('.send_password_btn'), class: 'btn btn-dark' %>
            <% end %>
            <br>
            <%= link_to t('.back_lnk'), login_path %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
