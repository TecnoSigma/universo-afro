<% if UserPresenter.company?(session[:profile]) %>
  <div class="mb-3">
    <label class="form-label"><%= t('.company_alias') %></label>
    <%= form.text_field 'company_alias', class: 'form-control', required: true %>
  </div>
  <div class="mb-3">
    <label class="form-label"><%= t('.company_name') %></label>
    <%= form.text_field 'company_name', class: 'form-control', required: true %>
  </div>
  <div class="mb-3">
    <label class="form-label"><%= t('.cnpj') %></label>
    <%= form.text_field 'cnpj', class: 'form-control', required: true %>
  </div>
<% end %>
