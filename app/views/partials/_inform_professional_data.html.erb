<% if UserPresenter.professional?(session[:profile]) %>
  <div class="mb-3">
    <label class="form-label"><%= t('.first_name') %></label>
    <%= form.text_field 'first_name', class: 'form-control', required: true %>
  </div>
  <div class="mb-3">
    <label class="form-label"><%= t('.last_name') %></label>
    <%= form.text_field 'last_name', class: 'form-control', required: true %>
  </div>
  <div class="mb-3">
    <label class="form-label"><%= t('.cpf') %></label>
    <%= form.text_field 'cpf', class: 'form-control', required: true, data: { mask_target: 'cpf' } %>
  </div>
  <div class="mb-3">
    <label class="form-label"><%= t('.profession') %></label>
    <%= form.select 'profession_id',
                    options_for_select(Profession.pluck(:name, :id)),
                    {},
                    class: 'form-select',
                    required: true %>
  </div>
<% end %>
